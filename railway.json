{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "npm ci && npx prisma generate && npm run build",
    "watchPatterns": [
      "src/**",
      "prisma/**"
    ]
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "npx prisma migrate deploy && node dist/main.js",
    "healthcheckPath": "/health/live",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  },
  "envVars": {
    "NODE_ENV": {
      "description": "Node environment",
      "default": "production"
    },
    "PORT": {
      "description": "Server port",
      "default": "3000"
    },
    "DATABASE_URL": {
      "description": "PostgreSQL connection string",
      "required": true
    },
    "REDIS_URL": {
      "description": "Upstash Redis URL",
      "required": true
    },
    "JWT_SECRET": {
      "description": "JWT secret key (min 32 chars)",
      "required": true
    },
    "JWT_REFRESH_SECRET": {
      "description": "JWT refresh secret key (min 32 chars)",
      "required": true
    },
    "S3_ACCESS_KEY_ID": {
      "description": "AWS S3 or Cloudflare R2 access key",
      "required": true
    },
    "S3_SECRET_ACCESS_KEY": {
      "description": "AWS S3 or Cloudflare R2 secret key",
      "required": true
    },
    "S3_BUCKET_NAME": {
      "description": "S3 bucket name",
      "required": true
    },
    "S3_ENDPOINT": {
      "description": "Cloudflare R2 or S3 endpoint URL",
      "required": true
    },
    "S3_PUBLIC_URL": {
      "description": "Public URL for S3/R2 bucket",
      "required": true
    },
    "CORS_ORIGINS": {
      "description": "Allowed CORS origins (comma-separated)",
      "default": "https://yourdomain.com"
    }
  }
}