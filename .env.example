# App Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Database (Railway PostgreSQL)
DATABASE_URL=postgresql://user:password@host:5432/database

# Redis (Railway Redis hoặc Upstash)
REDIS_URL=redis://user:password@host:6379
REDIS_TOKEN=                         # Optional - chỉ cần cho Upstash REST API

# JWT Authentication (Tùy chọn - xóa nếu không cần auth)
JWT_SECRET=your-secret-key-at-least-32-characters-long
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-secret-at-least-32-chars
JWT_REFRESH_EXPIRES_IN=30d

# Cloudflare R2 Storage (S3-compatible)
S3_ENDPOINT=https://<ACCOUNT_ID>.r2.cloudflarestorage.com
S3_REGION=auto
S3_ACCESS_KEY_ID=your-access-key-id
S3_SECRET_ACCESS_KEY=your-secret-access-key
S3_BUCKET_NAME=ecomate-dev
S3_PUBLIC_URL=https://<ACCOUNT_ID>.r2.cloudflarestorage.com/ecomate-dev

# CORS Origins
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Logging (Optional - có default values)
LOG_LEVEL=info                       # error, warn, info, debug, verbose
LOG_PRETTY=true                      # Pretty print logs in development
